    <div>

      <div class="row">
        <div class="col" style="background-color: #666666">
          <%= render 'layouts/sidebar' %>
        </div>

        <div class="col-9">
          </br>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
